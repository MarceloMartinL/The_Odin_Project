<% provide(:title, @user.name) %>

<h1><%= @user.name.capitalize %> Page</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= render 'friend_request_form' if user_signed_in? %>
	</div>
</div>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      	<%= gravatar_for @user %>
        <%= @user.name.capitalize %>
      </h1>
    </section>
  </aside>
	<div class="col-md-8">
		<% if @user.posts.any? %>
			<h3>Posts</h3>
			<ol class="posts">
				<%= render @posts %>
			</ol>
			<%= will_paginate @posts %>
		<% end %>
	</div>
</div>	
