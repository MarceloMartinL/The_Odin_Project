<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div
  </div>
<% else %>
	<div class="center jumbotron">
	  <h1>Welcome to Odin-Facebook</h1>

	  <h2>
	    This is the home page for the
	    <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
	    sample application.
	  </h2>
    <h2>Login through:</h2>
    
    <%= link_to image_tag('facebook_logo.png', alt: 'Facebook logo', size: '200x60'), user_facebook_omniauth_authorize_path %><br />
    <p>or</p>
	  <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
	</div>
<% end %>

